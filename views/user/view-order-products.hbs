<section>
    <div class="container mt-5">
        <div class="row">
        {{#each products}}
            <div class="col-md-3 p-3">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="/product-images/{{this.product._id}}.jpg" alt="{{this.product.name}}">
                    <div class="card-body">
                        <h5 class="card-title">{{this.product.name}}</h5>
                        <p class="card-text">Rs.{{this.product.price}}</p>
                        <p class="card-text">Quantity : {{this.quantity}}</p>
                        <p class="card-text">{{this.discription}}</p>
                    </div>
                </div>
            </div>
        {{/each}}
        </div>
    </div>
</section>