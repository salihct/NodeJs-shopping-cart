<section>
    <div class="container">
        <div class="row mt-5">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add product</a>
        </div>
        <table class="table mt-5">
        <thead>
            <tr>
            <th scope="col">No</th>
            <th scope="col">Name</th>
            <th scope="col">Category</th>
            <th scope="col">Discription</th>
            <th>Image</th>
            <th></th>
            <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <th scope="row">{{@index}}</th>
                <td>{{this.name}}</td>
                <td>{{this.category}}</td>
                <td>{{this.discription}}</td>
                <td><img style="width: 50px; height:50px" src="/product-images/{{this._id}}.jpg" alt="{{this.name}}"></td>
                <td>
                    <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                    <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                        onclick="return confirm('Are you want to delete {{this.name}} ?')">Delete
                    </a>    
                </td>
            </tr>
            {{/each}}
        </tbody>
        </table>
    </div>
</section>