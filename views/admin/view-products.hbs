<section>
    <div class="container">
        <div class="row mt-5">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add product</a>
        </div>
        <div class="mt-3">
        <table class="table mt-5" id="viewproducts">
        <thead>
            <tr>
            <th scope="col">Name</th>
            <th scope="col">Category</th>
            <th scope="col">Discription</th>
            <th>Price</th>
            <th>Image</th>
            <th>option</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.category}}</td>
                <td>{{this.discription}}</td>
                <td>{{this.price}}</td>
                <td><img style="width: 50px; height:50px" src="/product-images/{{this._id}}.jpg" alt="{{this.name}}"></td>
                <td>
                    <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                        onclick="return confirm('Are you want to delete {{this.name}} ?')">Delete
                    </a>
                    <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary"
                        >Edit
                    </a>    
                </td>
            </tr>
            {{/each}}
        </tbody>
        </table>
        </div>
    </div>
</section>

